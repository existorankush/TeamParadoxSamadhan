  <button class="btn" id="test-btn">Test Connection</button>

  <!-- üîπ Script added here -->
  <script>
    document.getElementById("test-btn").addEventListener("click", async () => {
      try {
        let response = await fetch("/api/test");
        let data = await response.json();
        alert(data.message);
      } catch (error) {
        alert("‚ùå Error connecting to backend");
      }
    });
  </script>


<h2>Ask EduMentor AI</h2>
<input type="text" id="question" placeholder="Type your question here">
<button class="btn" id="ask-btn">Ask</button>

<script>
  document.getElementById("test-btn").addEventListener("click", async () => {
    try {
      let response = await fetch("/api/test");
      let data = await response.json();
      alert(data.message);
    } catch (error) {
      alert("‚ùå Error connecting to backend");
    }
  });

  document.getElementById("ask-btn").addEventListener("click", async () => {
    let q = document.getElementById("question").value;
    try {
      let response = await fetch("/api/ask", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ question: q })
      });
      let data = await response.json();
      alert(data.answer);
    } catch (error) {
      alert("‚ùå Failed to get response from backend");
    }
  });
</script>

